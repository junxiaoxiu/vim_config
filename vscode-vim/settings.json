{
    // vim
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,
    "vim.incsearch": true,
    "vim.surround": true,
    "vim.sneak": false,
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.easymotion": true,

    "editor.lineNumbers": "relative",
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "off",

    "vim.insertModeKeyBindings": [
        {
            "before":["j", "j"],
            "after":["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            // switch to the left tab
            "before": ["J"],
            "after": [ "g","T" ]
        },
        {
            // switch to the right tab
            "before": ["K"],
            "after": [ "g","t" ]
        },
        {
            "before": [ "g","i" ],
            "commands": [
                "workbench.action.splitEditor",
                "editor.action.goToImplementation"
            ]
        },
        {
            "before" : ["<leader>","v", "s" ],
            "commands" : [":vs"]
        },
        {
            "before" : ["<leader>","s","p"],
            "commands" : [":sp"]
        },        
        {
            "before" : ["<leader>","q"],
            "commands" : [":q"]
        }   
    ],

}